{
  "extends": "airbnb-base",
  "root": true,
  "env": {
    "node": true,
    "es6": true,
    "browser": true
  },
  "rules": {
    "max-len": [
      "warn",
      150
    ],
    "no-console": "off",
    "comma-dangle": [
      "error",
      "never"
    ],
    "no-await-in-loop": "off",
    "radix": "off",
    "no-undef": "warn",
    "no-loop-func": "off",
    "arrow-body-style": "off",
    "no-continue": "off",
    "camelcase": "off",
    "no-useless-catch": "off",
    "no-underscore-dangle": "off",
    "no-eval": "warn"
  }
}
